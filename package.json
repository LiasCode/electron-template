{
  "name": "electron-template",
  "version": "1.0.0",
  "main": "./dist/electron/main.js",
  "type": "module",
  "scripts": {
    "frontend:dev": "node ./scripts/frontend-dev.mjs",
    "frontend:build": "node ./scripts/frontend-build.mjs",

    "electron:dev": "node ./scripts/electron-dev.mjs",
    "electron:build": "node ./scripts/electron-build.mjs",

    "clean": "node ./scripts/clean.mjs",

    "package": "npm run build && node ./scripts/packager.mjs",
    "builder": "npm run build && node ./scripts/builder.mjs",

    "dev": "npm run clean && npm-run-all --parallel frontend:dev electron:dev",

    "build": "npm run clean && npm-run-all --parallel frontend:build electron:build",

    "format": "prettier ./electron --ignore-unknown --write --config .prettierrc.json",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "LiasCode",
  "license": "ISC",
  "description": "Electron agnostic frontend framework template",
  "dependencies": {
    "electron-is-dev": "3.0.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/wait-on": "5.3.4",
    "chokidar": "3.6.0",
    "electron": "30.0.6",
    "electron-builder": "24.13.3",
    "esbuild": "0.21.3",
    "fs-extra": "11.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "wait-on": "7.2.0"
  }
}
